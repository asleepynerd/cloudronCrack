#!/bin/bash

echo "‚ö†Ô∏è  WARNING: This script requires Cloudron to be fully installed (domain setup, dashboard ready)"
read -p "Are you sure you want to continue? (y/n): " confirm1
if [[ $confirm1 != "y" ]]; then
    echo "Operation cancelled."
    exit 1
fi

echo "Modifying apps.js..."
if sed -i 's/await purchaseApp/\/\/await purchaseApp/' /home/yellowtent/box/src/apps.js; then
    echo "‚úÖ Successfully commented out purchase verification"
else
    echo "‚ùå Failed to modify file"
    exit 1
fi

echo "‚ö†Ô∏è  The server needs to be rebooted for changes to take effect"
echo "‚ö†Ô∏è  If you don't reboot now, the modification won't work"
read -p "Reboot now? (y/n): " confirm2
if [[ $confirm2 != "y" ]]; then
    echo "‚ùå Cancelled. Changes won't take effect until reboot"
    exit 1
fi

echo "üîÑ Rebooting system..."
sudo reboot
